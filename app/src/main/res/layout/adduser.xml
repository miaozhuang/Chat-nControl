<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adduser_popup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="20px"
    android:background="#ffffff"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:orientation="vertical"
        android:layout_weight="2"
        android:paddingLeft="20px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/textView"
                    android:textSize="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name: " />
                <EditText
                    android:id="@+id/adduser_user_name"
                    android:minWidth="400px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/textView2"
                    android:textSize="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password: " />
                <EditText
                    android:id="@+id/adduser_pwd"
                    android:inputType="textPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/textView3"
                    android:textSize="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password: " />
                <EditText
                    android:id="@+id/adduser_pwd_confirm"
                    android:inputType="textPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/textView4"
                    android:textSize="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-mail: " />
                <EditText
                    android:id="@+id/adduser_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>
        <GridView
            android:layout_width="fill_parent"
            android:layout_height="136dp"
            android:id="@+id/add_user_gridView_head_choose"
            android:numColumns="4"
            android:horizontalSpacing="0dp"
            android:verticalSpacing="0dp"
            android:stretchMode="columnWidth"
            android:listSelector="@null"
            android:gravity="center"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="55dp">
            <Button
                android:id="@+id/adduser_button_new_user_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK" />
            <Button
                android:id="@+id/adduser_button_new_user_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>